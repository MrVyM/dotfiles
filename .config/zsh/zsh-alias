# open this file 
alias al="$EDITOR ~/.config/zsh/zsh-alias" # test 

# close alias 
alias :q="exit"

# Reload the background of screen
alias reload-back="nitrogen --set-zoom-fill --random /home/vym/.config/nitrogen/backgrounds --save 2>/dev/null" 
alias reload-poly="pkill polybar; dex $HOME/.config/autostart/polybar.desktop"

# logout
alias logout="i3-msg exit" 

# Redo the last command
alias r="fc -s" 

# Beautify the default command
alias ls='ls --color=auto'
alias grep='grep --color=auto'

# ---- CONFIG ALIAS ---- 
alias config-zsh="$EDITOR ~/.zshrc"
alias config-i3="$EDITOR ~/.config/i3/config"
alias config-polybar="$EDITOR ~/.config/polybar/config.ini"
alias config-dunst="$EDITOR ~/.config/dunst/dunstrc"
alias config-conky="$EDITOR ~/.config/conky/"
alias config-nvim="$EDITOR ~/.config/nvim"
alias cfg='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# ---- GIT Alias ----
alias glog="git log --all --oneline --graph" 

# ---- Prog Alias ----
alias c="cd ~/Prog/C" 
alias rst="cd ~/Prog/RUST" 
alias esp="source ~/.opt/esp/esp-idf/export.sh" 

alias st="st-flash write build/Suicide-Quad.bin 0x8000000"  
