# open this file 
alias al="$EDITOR ~/.config/zsh/zsh-alias"

# Reload the background of screen
alias reload-back="nitrogen --set-zoom-fill --random /home/vym/.config/nitrogen 2>/dev/null" 
alias reload-poly="pkill polybar && dex /etc/xdg/autostart/polybar.desktop"

# logout
alias logout="i3-msg exit" 

# Beautify the default command
alias ls='ls --color=auto'
alias grep='grep --color=auto'

# ---- CONFIG ALIAS ---- 
alias config-zsh="$EDITOR ~/.zshrc"
alias config-i3="$EDITOR ~/.config/i3/config"
alias config-polybar="$EDITOR ~/.config/polybar/config.ini"
alias config-dunst="$EDITOR ~/.config/dunst/dunstrc"
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# ---- GIT Alias ----
alias glog="git log --all --oneline --graph" 

# ---- Prog Alias ----
alias c="cd ~/Prog/C" 

